@model ProductcatApp.Models.Category

<h2>Edit Category</h2>

<form method="post" action="/Category/Edit">
    <input type="hidden" name="CategoryId" value="@Model.CategoryId" />

    <div>
        <label>Category Name:</label>
        <input type="text" name="CategoryName" value="@Model.CategoryName" required />
    </div>
    <br />
    <button type="submit">Update</button>
</form>

<a href="/Category/Index">Back to List</a>
